{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "outDir": "./app",
    "rootDirs": [
      "src/common",
      "src/main"
    ],
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
  },
  "include": [
    "src/common/**/*.ts",
    "src/main/**/*.ts",
  ],
}